fancy-alt()
  position relative

  &:before
    content attr(data-alt)
    position absolute
    opacity 0
    top 0
    right -6px
    overflow hidden
    pointer-events none

    font-size 11pt
    padding 4px 8px
    background rgba(0,0,0,.7)
    color #fff
    white-space nowrap
    border-radius 2px

    transition opacity 50ms, top 100ms // out transition duration

  &:hover:before
    opacity 1
    top -110%
    transition opacity 400ms, top 100ms // in transition duration

fancy-checkbox()
  visibility hidden
  position relative
  width 40px
  height 20px
  cursor pointer
  pointer-events none

  &:before, &:after
    content ' '
    position absolute
    visibility visible
    cursor pointer
    border-radius 10px
    transition all 200ms
  &:before
    top 5px
    left 0
    width 30px
    height 12px
    background-color alpha(#000, 1 - .26);
  &:after
    top 2px
    left 0px
    width 16px
    height 16px
    border solid 1px
    background #fff
    border-color transparent
    box-shadow 0 1px 3px #000
  &:checked
    &:before
      background main-color-faded
    &:after
      background main-color
      border-color darken(main-color, 10%)
      box-shadow none
      left 15px

ripple()
  &.ripple
    position relative
    overflow hidden

    &:after
      content ' '
      position absolute
      background main-color
      border-radius 100px
      -webkit-animation ripple 200ms
      animation ripple 200ms

@-webkit-keyframes ripple
  from
    left 50%
    bottom 20%
    width 0
    height 0
    opacity .5

  to
    left -20%
    bottom -50%
    width 150%
    height 150%
    opacity 0

@keyframes ripple
  from
    left 50%
    bottom 0
    width 0
    height 0
    opacity 1

  to
    left -20%
    bottom -20%
    width 150%
    height 150%
    opacity 0
