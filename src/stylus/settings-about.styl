.settings-about
  text-align center

  .settings-about-name
    font-family 'Raleway', sans-serif
    font-size 5em
    margin 25px 0

  .settings-about-version
    font-family monospace

  .settings-about-rate
    display inline-block
    margin 25px auto 0
    padding 5px 15px
    background #eee
    border-radius 3px
    text-decoration none
    color inherit
    cursor pointer

    *
      display inline-block
      vertical-align middle

    span
      margin 0 6px

  .settings-about-author-info
    position absolute
    bottom 0
    left 0
    width 100%
    padding 20px
    font-size 0.9em

    p
      margin 15px 0

  .settings-about-share
    margin: 50px 0 0

    .social-link
      display: inline-block
      vertical-align: middle
      margin: 0 10px
      text-decoration: none
      fill: #777
      transition: fill 200ms

    .social-twitter:hover
      fill:  #00aced

    .social-facebook:hover
      fill: #3b5998

    .social-google:hover
      fill: #dd4b39

    .social-reddit:hover
      fill: #c7def7
