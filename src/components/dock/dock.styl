.dock
  position: fixed
  width: 100%
  bottom: 0
  list-style: none
  margin: 0
  padding: 20px 0 0
  display: flex
  flex-direction: row-reverse
  justify-content: flex-start
  transition: all 200ms

  &--autohide
    bottom: -50px
    padding-top: 80px
    transition: all 400ms
    transition-delay: 200ms

    &:hover
      bottom: 0
      transition: all 200ms
      transition-delay: 0ms
