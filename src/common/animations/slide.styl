.slide

  $distance = 50%

  &-enter
    transform: translateY(- $distance)
    opacity: 0
    transition: all 200ms cubic-bezier(0.250, 0.460, 0.450, 0.940)
    will-change: transform, opacity

    &-active
      opacity: 1
      transform: translateY(0)

  &-leave
    display: none
