.fadeIn

  &-appear
    opacity: .1

    &-active
      transition: opacity 400ms ease-in
      opacity: 1

  &-enter
    opacity: .1

    &-active
      transition: opacity 700ms ease-in
      opacity: 1

  &-leave
    opacity: 1

    &-active
      transition: opacity 700ms ease-in
      opacity: 0
